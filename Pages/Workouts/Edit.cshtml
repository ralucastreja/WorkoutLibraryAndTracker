@page 
@model WorkoutLibraryAndTracker.Pages.Workouts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Workout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Workout.WorkoutId" />
            <div class="form-group">
                <label asp-for="Workout.Name" class="control-label"></label>
                <input asp-for="Workout.Name" class="form-control" />
                <span asp-validation-for="Workout.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workout.Description" class="control-label"></label>
                <input asp-for="Workout.Description" class="form-control" />
                <span asp-validation-for="Workout.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workout.Duration" class="control-label"></label>
                <input asp-for="Workout.Duration" class="form-control" />
                <span asp-validation-for="Workout.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workout.Intensity" class="control-label"></label>
                <input asp-for="Workout.Intensity" class="form-control" />
                <span asp-validation-for="Workout.Intensity" class="text-danger"></span>
            </div>
            <!-- Category dropdown -->
            <div class="form-group">
                <label asp-for="Workout.CategoryId" class="control-label"></label>
                <select asp-for="Workout.CategoryId" class="form-control"
                        asp-items="Model.CategorySelectList">
                    <option value="">-- Select a Category --</option>
                </select>
                <span asp-validation-for="Workout.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
