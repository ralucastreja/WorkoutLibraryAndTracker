@page
@model WorkoutLibraryAndTracker.Pages.Workouts.CreateModel

@{
    ViewData["Title"] = "Create Workout & Log";
}

<h3>Create Workout</h3>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Workout Fields -->
    <div class="form-group">
        <label asp-for="Workout.Name" class="control-label"></label>
        <input asp-for="Workout.Name" class="form-control" />
        <span asp-validation-for="Workout.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Workout.Description" class="control-label"></label>
        <input asp-for="Workout.Description" class="form-control" />
        <span asp-validation-for="Workout.Description" class="text-danger"></span>
    </div>

    <!-- Add Intensity Field (REQUIRED) -->
    <div class="form-group">
        <label asp-for="Workout.Intensity" class="control-label"></label>
        <input asp-for="Workout.Intensity" class="form-control" />
        <span asp-validation-for="Workout.Intensity" class="text-danger"></span>
    </div>

    <!-- Add Duration Field (if you want the user to input it) -->
    <div class="form-group">
        <label asp-for="Workout.Duration" class="control-label"></label>
        <input asp-for="Workout.Duration" class="form-control" />
        <span asp-validation-for="Workout.Duration" class="text-danger"></span>
    </div>

    <!-- Category Dropdown -->
    <div class="form-group">
        <label asp-for="Workout.CategoryId" class="control-label"></label>
        <select asp-for="Workout.CategoryId"
                asp-items="Model.CategorySelectList"
                class="form-control">
            <option value="">-- Select a Category --</option>
        </select>
        <span asp-validation-for="Workout.CategoryId" class="text-danger"></span>
    </div>

    <hr />
    <h3>Log Details</h3>

    <!-- WorkoutLog Fields -->
    <div class="form-group">
        <label asp-for="WorkoutLog.Date" class="control-label"></label>
        <input asp-for="WorkoutLog.Date" class="form-control" type="date" />
        <span asp-validation-for="WorkoutLog.Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WorkoutLog.Notes" class="control-label"></label>
        <textarea asp-for="WorkoutLog.Notes" class="form-control"></textarea>
        <span asp-validation-for="WorkoutLog.Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
